<div class="main">
  <div class="inner2">
    <div class="form__wrapper">
      <h2 class="page-heading">Alist</h2>
      <p class="page-heading-text">みんなの朝活ToDoリストをチェックしよう</p>

        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.email_field :email, id:"user_email", autofocus: true, placeholder: "メールアドレス",autocomplete: "email", class: :form__text %>
        </div>

        <div class="field">
          <%= f.text_field :name, id:"user_name", placeholder: "ユーザー名", class: :form__text %>
        </div>

        <div class="field">
          <%= f.password_field :password, id:"user_password", placeholder: "パスワード(6文字以上)", autocomplete: "new-password", class: :form__text %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", placeholder: "パスワードの確認",autocomplete: "new-password", class: :form__text %>
        </div>


        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>