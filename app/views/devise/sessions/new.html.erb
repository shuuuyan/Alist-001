<div class="main">
  <div class="inner2">
    <div class="form__wrapper">
      <h2 class="page-heading">Alist</h2>
      <p class="page-heading-text">みんなの朝活ToDoリストをチェックしよう</p>
        
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>

        <div class="field">
          <%= f.email_field :email, id:"user_email", autofocus: true, placeholder: "メールアドレス",autocomplete: "email", class: :form__text %>
        </div>

        <div class="field">
          <%= f.password_field :password, id:"user_password", placeholder: "パスワード", autocomplete: "new-password", class: :form__text %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>