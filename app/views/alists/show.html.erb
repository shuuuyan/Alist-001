<main class="main">
  <div class="inner5">
    <div class="alist__wrapper">
      <div class="alist__field">
        <div class="alist__card">
          <div class="alist__card__title">
            <div class="alist__card__title__text">
              <%= @alist.title %>
            </div>
          </div>
          <div class="show_contributor">
            <%= link_to user_path(@alist.user), class: "user-link" do %>
              <i class="far fa-user user-btn"></i>  
            <% end %>
              <%= link_to @alist.user.name, user_path(@alist.user), class: :card__user %>
          </div>
          <div class="alist__card__list">
            <div class="alist__card__text">
              <i class="fas fa-check-square list_check-btn"></i>
              <%= @alist.list1 %>
            </div>
          </div>
          <div class="alist__card__list">
            <div class="alist__card__text">
              <i class="fas fa-check-square list_check-btn"></i>
              <%= @alist.list2 %> 
            </div>
          </div>
          <div class="alist__card__list">
            <div class="alist__card__text">
              <i class="fas fa-check-square list_check-btn"></i>
              <%= @alist.list3 %> 
            </div>
          </div>
        </div>
      </div>
        <% if current_user.id == @alist.user_id %>
          <div class="alist__manage">
            <%= link_to "編集する", edit_alist_path(@alist), class: :alist__btn %>
            <%= link_to "削除する", alist_path(@alist), method: :delete, class: :alist__btn %>
          </div>
        <% end %>
    </div>
      <div class="alist__comments">
        <% if user_signed_in? %>
          <%= form_with model: [@alist,@comment], local: true do |f| %>
            <div class="comment__main">
              <div class="comment__field">
                <%= f.text_field :text, placeholder: "コメントする" %>
              </div>
              <div class="comment__actions">
                <%= f.submit "送信", class: :comment__btn %>
              </div>
            </div>
          <% end %> 
        <% end %>
        <ul class="comments_lists">
          <% @comments.each do |comment| %>
            <li class="comments_list">
              <i class="fas fa-user comment-user-btn"></i>  
              <%= link_to "#{@alist.user.name} : ", user_path(@alist.user.id), class: :card__user %>
              <%= comment.text %>
            </li> 
          <% end %>
        </ul>
      </div>
  </div>
</main>
